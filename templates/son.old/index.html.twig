{% extends 'base.html.twig' %}

{% block head_title %}Son index
{% endblock %}

{% block body_main %}
	<h1>Son index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>LabelSon</th>
				<th>Id</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for son in sons %}
				<tr>
					<td>{{ son.labelSon }}</td>
					<td>{{ son.id }}</td>
					<td>
						<a href="{{ path('app_son_show', {'id': son.id}) }}">show</a>
						<a href="{{ path('app_son_edit', {'id': son.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_son_new') }}">Create new</a>
{% endblock %}
