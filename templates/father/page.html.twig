{% embed '@MazariniTools/page.html.twig' with {data: 3, action: 1} %}

	{% block head_title %}
		Father index
	{% endblock %}

	{% block title %}
		Father index
	{% endblock %}

	{% block hat %}
		{% include 'grand/_hat.html.twig' with {'entity': parent,} %}
	{% endblock %}

	{% block table_title %}
		<th>Id</th>
		<th>Label</th>
		<th>Number</th>
	{% endblock %}

	{% block table_data %}
		<td>{{ entity.id }}</td>
		<td>{{ entity.labelFather }}</td>
		<td>
			<a class="text-decoration-none" href="{{ path('app_son_page', {'id': entity.id, 'page':1}) }}">
				{% if entity.count == 0 %}
					None
				{% else %}
					{{ entity.count }}
					sons
				{% endif %}
			</a>
		</td>
	{% endblock %}

	{% block edit %}{% endblock %}
	{% block new %}{% endblock %}

{% endembed %}
