{% extends 'base.html.twig' %}

{% block title %}Father index{% endblock %}

{% block body %}
    <h1>Father index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>LabelFather</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for father in fathers %}
            <tr>
                <td>{{ father.labelFather }}</td>
                <td>{{ father.id }}</td>
                <td>
                    <a href="{{ path('app_father_show', {'id': father.id}) }}">show</a>
                    <a href="{{ path('app_father_edit', {'id': father.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_father_new') }}">Create new</a>
{% endblock %}
