{% embed '@MazariniTools/show.html.twig' %}

	{% block head_title %}
		Son
	{% endblock %}

	{% block title %}
		Son
	{% endblock %}

	{% block hat %}
		{% include 'father/_hat.html.twig' with {'entity':entity.parent,} %}
	{% endblock %}

	{% block main %}
		<table class="table">
			<tbody>
				<tr>
					<th>LabelSon</th>
					<td>{{ entity.labelSon }}</td>
				</tr>
				<tr>
					<th>Id</th>
					<td>{{ entity.id }}</td>
				</tr>
			</tbody>
		</table>
	{% endblock %}

	{% block button_delete %}
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmDelete">Delete</button>
	{% endblock %}
	{% block button_back %}
		<a class="btn btn-secondary" href="{{ urls.page }}">
			{% block button_back_label %}
				Back
			{% endblock %}
		</a>
	{% endblock %}


{% endembed %}
