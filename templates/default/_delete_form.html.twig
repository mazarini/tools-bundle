<!-- start default/_delete_form.html.twig -->
<div class="modal fade" id="{{ target }}" data-bs-backdrop="static" tabindex="-1" aria-labelledby="{{ target }}Label" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				{% block content %}
					<p>Are you sure you want to delete this item?</p>
				{% endblock %}
				<form method="post" action="{{ path(path ~ '_delete', {'id': entity.id}) }}">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
					<div class="d-flex justify-content-around">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-danger">Confirm</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- end delete -->
