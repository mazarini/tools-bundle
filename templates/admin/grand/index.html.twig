{% embed '@MazariniTools/index.html.twig' with {'data': 3, 'action': 2} %}

	{% block head_title %}
		Grand index
	{% endblock %}

	{% block title %}
		Grand index
	{% endblock %}

	{% block table_title %}
		<th>Id</th>
		<th>Label</th>
		<th>Number</th>
	{% endblock %}

	{% block table_data %}
		<td>{{ entity.id }}</td>
		<td>{{ entity.labelGrand }}</td>
		<td>
			<a class="text-decoration-none" href="{{ path('app_admin_father_index', {'id': entity.id}) }}">
				{% if entity.count == 0 %}
					None
				{% else %}
					{{ entity.count }}
					fathers
				{% endif %}
			</a>
		</td>
	{% endblock %}

	{% block button_back %}{% endblock %}

{% endembed %}
